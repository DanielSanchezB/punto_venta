<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl m-16 font-bold text-center">Regístrate</h1>

    <form action="" method="POST" class="mt-4">

        <input type="text" name="nombre" placeholder="Name" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="text" name="apellidoPat" placeholder="Apellido Paterno" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="text" name="apellidoMat" placeholder="Apellido Materno" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="phone" name="telefono" placeholder="Teléfono" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="email" name="correo" placeholder="Email" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="password" name="psw" placeholder="Contraseña" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 
        my-3 hover:bg-green-600 focus:bg-green-700">Enviar</button>
    </form>
</div>